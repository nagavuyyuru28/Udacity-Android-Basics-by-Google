<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="16dp"
            android:text="JAVA QUIZ"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            style="@style/RedText"
            android:fontFamily="sans-serif-medium"
            android:text="Question 1" />

        <TextView
            style="@style/GreenText"
            android:fontFamily="sans-serif-medium"
            android:text="Which data type is used to create a variable that stores text?" />

        <EditText
            android:id="@+id/answer_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter your answer"
            android:inputType="text"
            android:textAllCaps="true" />

        <TextView
            style="@style/RedText"
            android:fontFamily="sans-serif-medium"
            android:text="Question 2" />

        <TextView
            style="@style/GreenText"
            android:fontFamily="sans-serif-medium"
            android:text="Select the access modifiers in java" />

        <CheckBox
            android:id="@+id/q2opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="2dp"
            android:text="public"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q2opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="2dp"
            android:text="private"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q2opt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="2dp"
            android:text="protected"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q2opt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="2dp"
            android:text="None of the above"
            android:textSize="16sp" />

        <TextView
            style="@style/RedText"
            android:fontFamily="sans-serif-medium"
            android:text="Question 3" />

        <TextView
            style="@style/GreenText"
            android:fontFamily="sans-serif-medium"
            android:text="Which operator is used to concatenate two values?" />

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/q3opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="#"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/q3opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="+"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/q3opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="$"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/q3opt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="%"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            style="@style/RedText"
            android:fontFamily="sans-serif-medium"
            android:text="Question 4" />

        <TextView
            style="@style/GreenText"
            android:fontFamily="sans-serif-medium"
            android:text="In Java, is it possible to inherit attributes and methods from one class to another?" />

        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/q4opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="True"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/q4opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="False"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            style="@style/RedText"
            android:fontFamily="sans-serif-medium"
            android:text="Question 5" />

        <TextView
            style="@style/GreenText"
            android:fontFamily="sans-serif-medium"
            android:text="How do you write comments in java?" />

        <CheckBox
            android:id="@+id/q5opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="2dp"
            android:text="( )"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q5opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="2dp"
            android:text="//"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q5opt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="2dp"
            android:text="!!"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q5opt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="2dp"
            android:text="/*  */"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@android:color/holo_red_light"
            android:onClick="totalScored"
            android:textColor="@android:color/white"
            android:text="Submit" />
    </LinearLayout>

</ScrollView>